                    <DatePicker HorizontalAlignment="Left" Margin="307,174,0,0" VerticalAlignment="Top"/>
                    <Label Content="do:" HorizontalAlignment="Left" Margin="275,174,0,0" VerticalAlignment="Top"/>
                    <Image HorizontalAlignment="Left" Height="100" Margin="480,48,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="bDodajGodziny" Content="Dodaj godziny" HorizontalAlignment="Left" Margin="216,128,0,0" VerticalAlignment="Top" Width="120" Height="37" Click="bDodajGodziny_Click"/>
