<UserControl x:Class="Projekt_BD.Views.PanelZarzadzaniaWizyta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:local="clr-namespace:Projekt_BD.Views"
    mc:Ignorable="d" Height="440" Width="617.068" >

    <Grid x:Name="PanelZarzadzaniaWizyta1" Initialized="PanelZarzadzaniaWizyta1_Initialized" Margin="0,0,10,0">
        <Button x:Name="DodajNowaWizyte" Content="Dodaj nową wizytę" HorizontalAlignment="Left" Margin="474,376,0,0" VerticalAlignment="Top" Width="120" Height="54" Click="DodajNowaWizyte_Click" LostFocus="DodajNowaWizyte_LostFocus" />
        <DataGrid x:Name="dataGrid_Pacjenci" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="202" Width="553" SelectionChanged="dataGrid_Pacjenci_SelectionChanged"/>
        <ComboBox x:Name="LekarzComboBox" HorizontalAlignment="Left" Margin="10,302,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="LekarzComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="Imie"/>
                                <Binding Path="Nazwisko"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label x:Name="label" Content="Wybierz pacjenta" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Wybierz lekarza" HorizontalAlignment="Left" Margin="10,276,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="WybierzDate" HorizontalAlignment="Left" Margin="325,288,0,0" VerticalAlignment="Top" Width="120"  />
        <Label x:Name="label2" Content="Data wizyty" HorizontalAlignment="Left" Margin="325,257,0,0" VerticalAlignment="Top"/>
        <Button x:Name="PrzypiszPacjentaDoLekarza" Content="Przypisz nowego &#xD;&#xA;lekarza do pacjenta" HorizontalAlignment="Left" Margin="10,376,0,0" VerticalAlignment="Top" Width="120" Height="54" Click="PrzypiszPacjentaDoLekarza_Click"/>
        <Label x:Name="label3" Content="Wizyty pacjenta" HorizontalAlignment="Left" Margin="156,308,0,0" VerticalAlignment="Top"/>
        <Label x:Name="WizytaPacjenta" Content="" HorizontalAlignment="Left" Margin="156,339,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.392" Width="169" Height="91"/>
        <ComboBox x:Name="CzasComboBox" HorizontalAlignment="Left" Margin="474,339,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Długość wizyty" HorizontalAlignment="Left" Margin="474,313,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="GodzinaWizyty" HorizontalAlignment="Left" Height="23" Margin="472,288,0,0" TextWrapping="Wrap" Text="GG" VerticalAlignment="Top" Width="53" Foreground="#FFB4B4B4" MaxLines="1" FlowDirection="RightToLeft" MaxLength="2"/>
        <TextBox x:Name="MinutaWizyty" HorizontalAlignment="Left" Height="23" Margin="541,288,0,0" TextWrapping="Wrap" Text="MM" VerticalAlignment="Top" Width="53" Foreground="#FFB4B4B4" MaxLines="1" MaxLength="2"/>
        <Label Content="Czas wizyty" HorizontalAlignment="Left" Margin="472,257,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
